// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 

  firstName  String
  lastName   String
  email      String     @unique
  passwdHash String
  roles      UserRole[]

  facultyId Int?
  faculty   Faculty? @relation(fields: [facultyId], references: [id], onDelete: SetNull)

  semesterId Int?
  semester   Semester? @relation(fields: [semesterId], references: [id], onDelete: SetNull)

  coursesCreated Course[]

  coursesSigned  UserCourseSigned[]
  coursesTeaches UserCourseTeaches[]

  seminarGroupSigned  UserSeminarGroupSigned[]
  seminarGroupTeaches UserSeminarGroupTeaches[]

  evaluationsGiven Evaluation[]
}

model Course {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  code        String

  deletedAt DateTime? 

  capacity Int
  credits  Int

  startSign DateTime
  endSign   DateTime

  lectureDay          Day
  lectureStartTimeMin Int
  lectureDurationMin  Int

  semesterId Int
  semester   Semester @relation(fields: [semesterId], references: [id])

  creatorId Int
  creator   User @relation(fields: [creatorId], references: [id])

  facultyId Int
  faculty   Faculty @relation(fields: [facultyId], references: [id])

  students UserCourseSigned[]
  teachers UserCourseTeaches[]

  seminarGroups SeminarGroup[]
}

model Faculty {
  id       Int    @id @default(autoincrement())
  name     String 
  logoPath String

  deletedAt DateTime? 

  courses Course[]
  people  User[]

  @@unique([name])
}

model Semester {
  id           Int          @id @default(autoincrement())
  year         Int
  semesterType SemesterType

  deletedAt DateTime? 

  courses Course[]
  users   User[]

  @@unique([year, semesterType])
}

model SeminarGroup {
  id Int @id @default(autoincrement())

  seminarGroupDay                   Day
  seminarGroupDurationStartTimeMins Int
  seminarGroupDurationMins          Int

  deletedAt DateTime? 

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  students UserSeminarGroupSigned[]
  tutors   UserSeminarGroupTeaches[]
}

model Evaluation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime? 

  markId Int?
  mark   Mark? @relation(fields: [markId], references: [id], onDelete: SetNull)

  teacherSubmittedId Int?
  teacher            User? @relation(fields: [teacherSubmittedId], references: [id], onDelete: SetNull)

  userId     Int
  courseId   Int
  userCourse UserCourseSigned @relation(fields: [userId, courseId], references: [studentId, courseId], onDelete: SetNull)

  @@unique([userId, courseId])
}

model Mark {
  id               Int    @id @default(autoincrement())
  charRepresent    String
  numericRepresent Float

  deletedAt DateTime? 

  evaluations Evaluation[]

  @@unique([charRepresent])
  @@unique([numericRepresent])
}

// Connection tables
// Courses

model UserCourseSigned {
  id Int @id @default(autoincrement())

  deletedAt DateTime? 

  studentId Int
  student   User @relation(fields: [studentId], references: [id], onDelete: SetNull)

  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: SetNull)

  isFavourite Boolean  @default(false)
  signedAt    DateTime @default(now())

  evaluationId Int?
  evaluation   Evaluation? @relation()

  @@unique([studentId, courseId])
}

model UserCourseTeaches {
  id Int @id @default(autoincrement())

  deletedAt DateTime? 

  teacherId Int
  teacher   User @relation(fields: [teacherId], references: [id], onDelete: SetNull)

  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: SetNull)

  isHelper   Boolean
  isLecturer Boolean

  @@unique([teacherId, courseId])
}

// Seminar groups

model UserSeminarGroupSigned {
  id Int @id @default(autoincrement())

  deletedAt DateTime? 

  studentId Int
  student   User @relation(fields: [studentId], references: [id], onDelete: SetNull)

  seminarGroupId Int
  seminarGroup   SeminarGroup @relation(fields: [seminarGroupId], references: [id], onDelete: SetNull)

  courseId Int

  @@unique([studentId, courseId])
}

model UserSeminarGroupTeaches {
  id Int @id @default(autoincrement())

  deletedAt DateTime? 

  tutorId Int
  tutor   User @relation(fields: [tutorId], references: [id], onDelete: SetNull)

  seminarGroupId Int
  seminarGroup   SeminarGroup @relation(fields: [seminarGroupId], references: [id], onDelete: SetNull)

  @@unique([tutorId, seminarGroupId])
}

enum SemesterType {
  summer
  winter
}

enum UserRole {
  user
  admin
  teacher
}

enum Day {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
}
